        <div class="col-md-2 col-xs-2"></div>
        <div class="col-md-6 col-xs-6"><%= f.select :age, @age.map { |a| a.to_s + '歳'} %></div>
      </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
