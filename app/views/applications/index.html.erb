        <div class="col-md-6 col-xs-6"><%= f.select :weight, @weight.map { |w| w.to_s + 'kg'} %></div>
      </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

    <div class="container-fluid">
      <div class="row application_content sampleRow">
        <div class="col-md-6 col-xs-6"><%= f.label :threesize, t("⑤スリーサイズ（B/W/H/)") %></div>
